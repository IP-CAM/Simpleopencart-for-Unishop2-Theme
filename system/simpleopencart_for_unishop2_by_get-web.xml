<modification>
  <name>simpleopencart for unishop2 by Get-Web</name>
  <code>simpleopencart_for_unishop2_by_get-web</code>
  <version>1.0</version>
  <author>Vitalii P.</author>
  <link>https://get-web.site</link>

  <file path="catalog/controller/checkout/simplecheckout.php">
    <operation>
      <search>
        <![CDATA[$this->_templateData['cart_total'] = str_replace($find, $replace, $text_items);]]>
      </search>
      <add position="replace">
        <![CDATA[$this->_templateData['cart_total'] = $this->cart->countProducts();]]>
      </add>
    </operation>
    <operation>
      <search>
        <![CDATA[$this->_templateData['cart_total'] = sprintf($text_items, 0, $this->simplecheckout->formatCurrency(0));]]>
      </search>
      <add position="replace">
        <![CDATA[$this->_templateData['cart_total'] = $this->cart->countProducts();]]>
      </add>
    </operation>
  </file> 

  <!-- language -->
  <file path="catalog/language/ru-ru/checkout/simplecheckout.php">
    <operation>
      <search><![CDATA[// Entry]]></search>
      <add position="after"><![CDATA[
        $_['button_apply']              = 'Применить';
        $_['unicheckout_title']         = 'Товаров в корзине';
        $_['unicheckout_heading']       = 'Ваш заказ';
      ]]></add>
    </operation>
  </file>
  <file path="catalog/language/en-gb/checkout/simplecheckout.php">
    <operation>
      <search><![CDATA[// Entry]]></search>
      <add position="after"><![CDATA[
        $_['button_apply']              = 'Apply';
        $_['unicheckout_title']         = 'Products in the cart';
        $_['unicheckout_heading']       = 'Your order';
      ]]></add>
    </operation>
  </file>


</modification>
